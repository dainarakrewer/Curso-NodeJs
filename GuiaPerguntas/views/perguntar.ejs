<%- include('partials/header') %>
<body>
<%- include('partials/navbar') %>
<div class="container">
    <div class="card" id="form-pergunta">
        <div class="card-header">
            <h3>Realizar pergunta</h3>
        </div>
        <div class="card-body">
            <form method="post" action="/salvarPergunta">
                <label>Título</label>
                <input type="text" placeholder="Escreva o título" class="form-control mt-1 mb-4"
                       name="titulo">
                <label>Descrição</label>
                <textarea placeholder="Descreva sua pergunta" class="form-control mt-1 mb-4"
                          name="descricao"></textarea>

                <button type="submit" class="btn btn-primary">Perguntar</button>
            </form>
        </div>
    </div>
</div>
</body>
